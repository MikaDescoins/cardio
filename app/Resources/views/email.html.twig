<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional //EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>GLADVAD</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta content="width=device-width">
    <style type="text/css">
        /* Fonts and Content */
        body, td { font-family: 'Helvetica Neue', Arial, Helvetica, Geneva, sans-serif; font-size:14px; }
        body { background-color: #FFF; margin: 0; padding: 0; -webkit-text-size-adjust:none; -ms-text-size-adjust:none; }
        h2{ padding-top:12px; /* ne fonctionnera pas sous Outlook 2007+ */color:#0E7693; font-size:22px; }

        @media only screen and (max-width: 480px) {

            table[class=w275], td[class=w275], img[class=w275] { width:135px !important; }
            table[class=w150], td[class=w150], img[class=w150] { width:85px !important; }
            table[class=w30], td[class=w30], img[class=w30] { width:10px !important; }
            table[class=w580], td[class=w580], img[class=w580] { width:280px !important; }
            table[class=w640], td[class=w640], img[class=w640] { width:300px !important; }
            img{ height:auto;}
            /*illisible, on passe donc sur 3 lignes */
            table[class=w180], td[class=w180], img[class=w180] {
                width:280px !important;
                display:block;
            }
            td[class=w20]{ display:none; }
        }

    </style>

</head>

<body style="margin:0px; padding:0px; -webkit-text-size-adjust:none;">

<table width="100%" cellpadding="0" cellspacing="0" border="0" style="background-color:#FFF;" >
    <tbody>
    <tr>
        <td align="center" bgcolor="#FFF">
            <table  cellpadding="0" cellspacing="0" border="0" style='border:1px solid #c7c7c7;'>
                <tbody>
                <tr>
                    <td class="w640"  width="640" height="10"></td>
                </tr>

                <tr>
                    <td align="center" class="w640"  width="640" height="20"> {% if online is defined %}<a style="color:#f2bc00; font-size:12px;" href="{{online}}"><span style="color:#f2bc00; font-size:12px;">{{"email.view.offline"|trans({}, "messages", locale)}}</span></a>{% endif %} </td>
                </tr>
                <tr>
                    <td class="w640"  width="640" height="10"></td>
                </tr>


                <!-- entete -->
                <tr class="pagetoplogo">
                    <td class="w640"  width="640">
                        <table  class="w640"  width="640" cellpadding="0" cellspacing="0" border="0" bgcolor="#FFF">
                            <tbody>
                            <tr style="background: #fff;">
                                <td class="w30"  width="30"></td> <tr>
                                <td class="w150"  width="150" valign="top">

                                </td>
                                <td class="w30"  width="30" class="w30"></td>
                                <td class="w580"  width="580" valign="middle" bgcolor="#FFF">
                                    <div align="left" class="article-content">
                                        <div style="font-size:34px; text-align: center; color:#e4032e;">GLADVAD</div>
                                    </div>
                                </td>
                            </tr>
                            <td class="w30"  width="30"></td>
                            </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>

                <tr class="content">
                    <td class="w640" class="w640"  width="640" bgcolor="#ffffff">
                        <table class="w640"  width="640" cellpadding="0" cellspacing="0" border="0">
                            <tbody>
                            <tr>
                                <td  class="w30"  width="30"></td>
                                <td  class="w580"  width="580">

                                    {% block contentEmail %}
                                    {% endblock %}

                                </td>
                                <td class="w30" class="w30"  width="30"></td>
                            </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>

                <!-- pied de page -->
                <tr class="pagebottom">
                    <td class="w640"  width="640">
                        <table class="w640"  width="640" cellpadding="0" cellspacing="0" border="0" bgcolor="#c7c7c7">
                            <tbody>
                            <tr>
                                <td colspan="5" height="10"></td>
                            </tr>
                            <tr>
                                <td class="w30"  width="30"></td>
                                <td class="w580"  width="580" valign="top">
                                    <p align="center" class="pagebottom-content-left">
                                        © <a style="color:#255D5C;" href="https://extranet.guyanepionnieres.com" target="_blank"><span style="color:#0f0e0e;">GLADVAD</span></a> -
                                        Développé par <a style="color:#255D5C;" href="http://www.limeo-interactive.com/" target="_blank"><span style="color:#0f0e0e;">LAB E-SANTÉ</span></a>
                                    </p>
                                </td>

                                <td class="w30"  width="30"></td>
                            </tr>
                            <tr>
                                <td colspan="5" height="10"></td>
                            </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>
                </tbody>
            </table>
        </td>
    </tr>
    </tbody>
</table>
</body>
</html>